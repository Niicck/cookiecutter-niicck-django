{
  "name": "cookiecutter_niicck_django",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "start": "npm run watch:tailwind",
    "build": "npm run build:clean && npm run build:tailwind",
    "build:clean": "rimraf ./local/static/css",
    "build:tailwind": "cross-env NODE_ENV=production tailwindcss --postcss -i ./cookiecutter_niicck_django/base/static/base/css/main.css -o ./build/static/css/output.css --minify",
    "watch:tailwind": "cross-env NODE_ENV=development tailwindcss --postcss -i ./cookiecutter_niicck_django/base/static/base/css/main.css -o ./build/static/css/output.css -w",
    "tailwindcss": "node ./node_modules/tailwindcss/lib/cli.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.4.0",
    "@tailwindcss/typography": "^0.5.2",
    "autoprefixer": "^10.4.13",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.14",
    "postcss-import": "^14.1.0",
    "postcss-simple-vars": "^6.0.3",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.2.4"
  }
}
